.home-item {
	position: relative;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
  width: 260rpx;
  height: 260rpx;
  border-radius: 100%;
  box-shadow: 0 5px 40px -20px #999;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;

	animation: show-item 1s ease-out;
  animation-fill-mode: backwards;
}

@keyframes show-item {
	0% {
    opacity: 0;
	transform: scale(0.2);
  }
  90% {
    opacity: 1;
	transform: scale(1.1);
  }
  100% {
    opacity: 1;
	transform: scale(1);
  }
}

.home-item-hover{
  opacity: 0.7;
}

.home-item > text {
	width: 40%;
	text-align: center;
	word-wrap: true;
	font-size: 40rpx;
	color: white;
}

.home-item-mini {
	position: absolute;
