<view class="container">

    <canvas canvas-id="myCanvas" style="width: 100%; height: 1130rpx; background-color:#eee;" disable-scroll='true' />

    <view class="button-sp-area">
        <button class="mini-btn" type="primary" size="mini" plain="true" bindtap='onAgain'>点我演示</button>
        <button class="mini-btn" type="primary" size="mini" bindtap='onPause'>{{pause ? "继续": "暂停"}}</button>
    </view>

    <text class="page-body-text">房号优先级排列</text>
    <text class="page-body-text">{{list_str}}</text>
</view>